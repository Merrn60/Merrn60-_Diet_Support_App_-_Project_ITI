@{
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #fce4ec; /* Light pink background for consistency */
            color: #333;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin: 0 auto;
            padding: 20px;
        }

        h2 {
            color: #ec407a; /* Consistent medium pink */
            font-size: 2rem;
            margin-bottom: 30px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #ec407a;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            margin-top: 10px;
            display: inline-block;
        }

            .btn-primary:hover {
                background-color: #d81b60; /* Darker pink hover */
            }

        .form-container {
            background-color: white;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
        }

        .placeholder-text {
            color: #aaa; /* Lighter text for placeholders */
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Welcome to Admin Dashboard</h2>

        <!-- Add a Quote Form -->
        <div class="form-container">
            <h3>Add a New Quote</h3>
            <form asp-action="AddQuote" method="post">
                <div class="form-group">
                    <label for="quoteText">Quote</label>
                    <input type="text" class="form-control" id="quoteText" name="quoteText" placeholder="Enter the quote" required>
                </div>

                <div class="form-group">
                    <label for="author">Author</label>
                    <input type="text" class="form-control" id="author" name="author" placeholder="Enter the author's name (optional)">
                </div>

                <div class="form-group">
                    <label for="category">Category</label>
                    <input type="text" class="form-control" id="category" name="category" placeholder="Enter a category (optional)">
                </div>

                <button type="submit" class="btn-primary">Add Quote</button>
            </form>
        </div>

        <!-- Add a Video Form -->
        <div class="form-container">
            <h3>Add a New Video</h3>
            <form asp-action="AddVideo" method="post">
                <div class="form-group">
                    <label for="videoTitle">Title</label>
                    <input type="text" class="form-control" id="videoTitle" name="videoTitle" placeholder="Enter the video title" required>
                </div>

                <div class="form-group">
                    <label for="videoUrl">Video URL</label>
                    <input type="url" class="form-control" id="videoUrl" name="videoUrl" placeholder="Enter the video URL" required>
                </div>

                <div class="form-group">
                    <label for="videoCategory">Category</label>
                    <input type="text" class="form-control" id="videoCategory" name="videoCategory" placeholder="Enter a category (optional)">
                </div>

                <button type="submit" class="btn-primary">Add Video</button>
            </form>
        </div>
    </div>
</body>
</html>
