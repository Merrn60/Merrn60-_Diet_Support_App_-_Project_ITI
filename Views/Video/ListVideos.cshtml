@model IEnumerable<IV.Models.InspirationalVideo>

@{
    ViewData["Title"] = "Inspirational Videos";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f0f4f8; /* Background color */
            color: #333; /* Text color */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Font */
            margin: 0;
            padding: 0;
        }

        .container {
            width: 90%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        h2 {
            color: #007bff; /* Primary color */
            font-size: 2.5rem;
            margin-bottom: 30px;
            text-align: center;
        }

        .video-item {
            background-color: #ffffff; /* Card background */
            border: 1px solid #ddd; /* Border color */
            border-radius: 8px; /* Rounded corners */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Shadow */
            margin-bottom: 20px;
            padding: 15px;
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .video-item:hover {
                transform: translateY(-5px); /* Lift effect */
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Enhanced shadow */
            }

        h3 {
            color: #333;
            font-size: 1.8rem;
            margin-bottom: 10px;
        }

        a {
            color: #007bff; /* Link color */
            text-decoration: none;
            font-weight: bold;
        }

            a:hover {
                text-decoration: underline;
            }

        p {
            font-size: 1rem;
            color: #555; /* Text color */
            margin-top: 5px;
        }

        .no-videos {
            text-align: center;
            font-size: 1.2rem;
            color: #888; /* Placeholder color */
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>@ViewData["Title"]</h2>

        @if (Model != null && Model.Any())
        {
            @foreach (var video in Model)
            {
                <div class="video-item">
                    <h3>@video.Title</h3>
                    <a href="@video.URL" target="_blank">Watch Video</a>
                    <p>Category: @video.Category</p>
                </div>
            }
        }
        else
        {
            <p class="no-videos">No videos available.</p>
        }
    </div>
</body>
</html>
