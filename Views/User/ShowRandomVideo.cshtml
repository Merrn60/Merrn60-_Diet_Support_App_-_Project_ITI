@model IV.Models.InspirationalVideo

@{
    ViewData["Title"] = "Inspirational Video";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #fce4ec; /* Same as the signup page background */
            color: #333;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Same font as signup page */
            margin: 0;
            padding: 0;
        }

        .container {
            width: 90%;
            max-width: 1000px;
            margin: 0 auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #ec407a; /* Matching the signup page primary color */
            font-size: 2.5rem;
            margin-bottom: 20px;
            text-align: center;
        }

        .video-item {
            background-color: #ffffff;
            border: 1px solid #ddd; /* Light gray border */
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            padding: 20px;
            transition: box-shadow 0.3s ease, transform 0.3s ease;
        }

            .video-item:hover {
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
                transform: translateY(-5px);
            }

        h3 {
            color: #333; /* Dark gray for text */
            font-size: 1.8rem;
            margin-bottom: 10px;
        }

        a {
            color: #ec407a; /* Matching the signup page primary color */
            text-decoration: none;
            font-weight: bold;
        }

            a:hover {
                text-decoration: underline;
            }

        p {
            font-size: 1rem;
            color: #555;
            margin-top: 10px;
        }

        .no-video {
            text-align: center;
            font-size: 1.2rem;
            color: #6c757d; /* Placeholder color */
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>@ViewData["Title"]</h2>

        @if (Model != null)
        {
            <div class="video-item">
                <h3>@Model.Title</h3>
                <a href="@Model.URL" target="_blank">Watch Video</a>
                <p>Category: @Model.Category</p>
            </div>
        }
        else
        {
            <p class="no-video">No video available.</p>
        }
    </div>
</body>
</html>
